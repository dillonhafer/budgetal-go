{
  "name": "budgetal",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3000",
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "raf": "^3.4.1"
  },
  "dependencies": {
    "@shared": "file:../shared",
    "antd": "^2.13.10",
    "classnames": "^2.2.5",
    "evergreen-ui": "^4.2.0",
    "formik": "^1.4.2",
    "mdi-react": "^2.1.19",
    "papaparse": "^4.3.6",
    "rc-select": "^7.3.1",
    "react": "16.6.0",
    "react-datepicker": "^1.8.0",
    "react-dom": "16.6.0",
    "react-highcharts": "^16.0.2",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "react-scripts": "2.1.3",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "yup": "^0.26.6"
  },
  "scripts": {
    "start": "yarn clean-ant && source APP_ENV && react-scripts start",
    "build-shared": "(cd ../shared && yarn build) && rm -rf node_modules/@shared && yarn install --check-files",
    "test": "source APP_ENV && react-scripts test",
    "test:w": "yarn test --watch",
    "test:c": "yarn test --coverage",
    "test:debug": "NODE_PATH=app/javascript node --inspect node_modules/.bin/jest --watch --runInBand",
    "build": "yarn build-shared && yarn clean-ant && source .env.production && react-scripts build",
    "eject": "react-scripts eject",
    "clean-ant": "./clean-ant",
    "release": "yarn build && firebase deploy"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
